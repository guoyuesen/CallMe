<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<include layout="@layout/base_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/addstaff_layout"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="19dip"
            android:layout_height="18dip"
            android:layout_margin="15dip"
            android:src="@mipmap/addstaff_img1"
            />
        <EditText
            android:id="@+id/addstaff_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:hint="员工姓名"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/addstaff_layout"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="19dip"
            android:layout_height="18dip"
            android:layout_margin="15dip"
            android:src="@mipmap/addstaff_img2"
            />
        <EditText
            android:id="@+id/addstaff_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:hint="登录手机号"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/addstaff_layout"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="19dip"
            android:layout_height="18dip"
            android:layout_margin="15dip"
            android:src="@mipmap/addstaff_img3"
            />
        <EditText
            android:id="@+id/addstaff_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:hint="登录密码"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/addstaff_layout"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="19dip"
            android:layout_height="18dip"
            android:layout_margin="15dip"
            android:src="@mipmap/addstaff_img4"
            />
        <EditText
            android:id="@+id/addstaff_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:hint="验证码"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/addstaff_layout"
        >
        <ImageView
            android:layout_width="19dip"
            android:layout_height="18dip"
            android:layout_margin="15dip"
            android:src="@mipmap/addstaff_img5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="15sp"
            android:hint="设为管理员"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="48dip"
            />
        <com.call.gys.crdeit.callme.view.WiperSwitch
            android:id="@+id/addstaff_maneger"
            android:layout_width="46dip"
            android:layout_height="22dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dip"
            android:layout_marginRight="15dip"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/addstaff_submit"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:background="@drawable/add_remind_btn"
        android:layout_margin="50dip"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        />
</LinearLayout>