<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dip"
        >
        <ImageView
            android:id="@+id/task_call_type"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="7dip"
            android:src="@android:drawable/sym_call_outgoing"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="36dip"
            >
            <TextView
                android:id="@+id/task_call_phone"
                android:layout_width="118dp"
                android:layout_height="24dp"
                android:text="13888948136 "
                android:textColor="#ff333333"
                android:textSize="17sp"

                />
            <TextView
                android:id="@+id/task_call_yys"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:text="云南昆明 移动"
                android:textColor="#ff8f8f8f"
                android:textSize="11sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/task_call_jd"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="初访"
                    android:textColor="#ff974b07"
                    android:textSize="11sp"
                    />
                <ImageView
                    android:id="@+id/task_call_xj1"
                    android:layout_width="9dip"
                    android:layout_height="9dip"
                    android:src="@mipmap/home_item_left"
                    android:layout_margin="3.5dip"
                    />
                <ImageView
                    android:id="@+id/task_call_xj2"
                    android:layout_width="9dip"
                    android:layout_height="9dip"
                    android:src="@mipmap/home_item_left"
                    android:layout_margin="3.5dip"
                    />
                <ImageView
                    android:id="@+id/task_call_xj3"
                    android:layout_width="9dip"
                    android:layout_height="9dip"
                    android:src="@mipmap/home_item_left"
                    android:layout_margin="3.5dip"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64dip"
            android:layout_marginTop="5dip"
            >
            <TextView
                android:id="@+id/task_call_sj"
                android:layout_width="58dp"
                android:layout_height="14dp"
                android:text="10-19 12:53"
                android:textColor="#ff666666"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/task_call_th"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="0秒"
                android:textColor="#ff666666"
                android:textSize="10sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/task_call_cz"
            android:layout_width="28dip"
            android:layout_height="28dip"
            android:src="@mipmap/home_item_reft"
            android:layout_marginTop="5dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dip"
            />
    </RelativeLayout>
</RelativeLayout>