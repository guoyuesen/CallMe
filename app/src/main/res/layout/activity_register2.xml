<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员姓名"
        android:layout_marginLeft="50dip"
        android:textColor="#000000"
        android:textSize="20dip"
        android:layout_marginTop="20dip"
        />
    <EditText
        android:id="@+id/manage_name"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/editext_boder"
        android:hint="请输入管理员姓名"
        android:layout_marginLeft="48dip"
        android:layout_marginRight="48dip"
        android:paddingLeft="5dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员手机号"
        android:layout_marginLeft="50dip"
        android:textColor="#000000"
        android:textSize="20dip"
        android:layout_marginTop="20dip"
        />
    <EditText
        android:id="@+id/manage_phone"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/editext_boder"
        android:hint="请输入管理员手机号"
        android:layout_marginLeft="48dip"
        android:layout_marginRight="48dip"
        android:paddingLeft="5dip"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        android:text="此手机号用于登录管理后台及APP，请认真确认。"
        android:textSize="10dip"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:text="注册"
        android:layout_margin="50dip"
        android:background="@drawable/continuity_call_img"
        />

</LinearLayout>