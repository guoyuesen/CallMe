<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<include layout="@layout/base_title_layout"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="238dip"
    android:orientation="vertical"
    android:background="@mipmap/my_service_bg"
    android:gravity="center"
    >
    <ImageView
        android:layout_width="69dip"
        android:layout_height="86dip"
        android:src="@mipmap/my_service_img"
        />
    <TextView
        android:layout_width="125dip"
        android:layout_height="33dip"
        android:background="@drawable/my_service_top"
        android:layout_margin="10dip"
        android:gravity="center"
        android:text="试用会员"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成都云拓客科技有限公司"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务开通时间：2018-10-26 10:14"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="42dip"
        android:layout_marginLeft="62dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务结束时间：2018-10-26 10:14"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="62dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务剩余天数：2"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="62dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="员工最大上限：10"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="62dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前会员类型：试用会员"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="62dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_margin="30dip"
        android:background="@drawable/myservice_button"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="17dip"
            android:layout_height="16dip"
            android:src="@mipmap/myservicecall"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dip"
            />
    </LinearLayout>
</LinearLayout>