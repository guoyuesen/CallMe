<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<include layout="@layout/base_title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="36dip"
        android:orientation="horizontal"
        android:padding="15dip"
        android:background="@drawable/update_pass"
        >
        <ImageView
            android:layout_width="15dip"
            android:layout_height="20dip"
            android:src="@mipmap/update_pass_img0"
            />
        <EditText
            android:id="@+id/up_pass_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="原密码"
            android:paddingLeft="10dip"
            android:background="@color/white"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="36dip"
        android:orientation="horizontal"
        android:padding="15dip"
        android:background="@drawable/update_pass"
        >
        <ImageView
            android:layout_width="15dip"
            android:layout_height="20dip"
            android:src="@mipmap/update_pass_img1"
            />
        <EditText
            android:id="@+id/up_pass_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="新密码"
            android:paddingLeft="10dip"
            android:background="@color/white"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="36dip"
        android:orientation="horizontal"
        android:padding="15dip"
        android:background="@drawable/update_pass"
        >
        <ImageView
            android:layout_width="15dip"
            android:layout_height="20dip"
            android:src="@mipmap/update_pass_img1"
            />
        <EditText
            android:id="@+id/up_pass_03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="确认新密码"
            android:paddingLeft="10dip"
            android:background="@color/white"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/up_pass_submit"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:layout_margin="48dip"
        android:background="@drawable/update_pass_submit"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        />
</LinearLayout>