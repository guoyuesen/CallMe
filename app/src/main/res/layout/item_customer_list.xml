<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="12dip"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/customername"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="张晓丽 "
            android:textColor="#ff333333"
            android:textSize="17sp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dip"
        android:layout_marginTop="22dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/customer_company_name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:text=""
            android:textColor="#ff2574ff"
            android:textSize="11sp"
            android:visibility="visible"
            android:maxLength="20"
            />
        <ImageView
            android:id="@+id/customerimg1"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:src="@mipmap/home_item_left"
            android:layout_margin="1dip"
            />
        <ImageView
            android:id="@+id/customerimg2"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:src="@mipmap/home_item_left"
            android:layout_margin="1dip"
            />
        <ImageView
            android:id="@+id/customerimg3"
            android:layout_width="9dip"
            android:layout_height="9dip"
            android:src="@mipmap/home_item_left"
            android:layout_margin="1dip"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/customertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:text="已经沟通过了 感觉有意向 可以进一步聊一聊，等下周找个时间约出来，已经沟通过了 感觉有意向 可以进一步聊一聊，等下周找个时间约出来已经沟通过了 感觉有意向 可以进一步聊一聊，等下周找个时间约出来。"
        android:textColor="#ff8f8f8f"
        android:textSize="11sp"
        android:layout_marginRight="5dip"
        />
    <TextView
        android:id="@+id/customertype"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="初选"
        android:textColor="#ff916c00"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>