<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/base_title_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="企业名称"
        android:layout_marginLeft="50dip"
        android:textColor="#000000"
        android:textSize="20dip"
        android:layout_marginTop="20dip"
        />
    <EditText
        android:id="@+id/com_name"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/editext_boder"
        android:hint="请输入企业名称"
        android:layout_marginLeft="48dip"
        android:layout_marginRight="48dip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="法人"
        android:layout_marginLeft="50dip"
        android:textColor="#000000"
        android:textSize="20dip"
        android:layout_marginTop="20dip"
        />
    <EditText
        android:id="@+id/com_cor"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/editext_boder"
        android:hint="请输入法人姓名"
        android:layout_marginLeft="48dip"
        android:layout_marginRight="48dip"
        />
    <Button
        android:id="@+id/register_next"
        android:layout_width="match_parent"
        android:layout_height="36dip"
        android:text="下一步"
        android:layout_margin="50dip"
        android:background="@drawable/continuity_call_img"
        />
</LinearLayout>