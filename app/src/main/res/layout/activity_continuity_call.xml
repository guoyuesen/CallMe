<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="375dip"
    android:orientation="vertical"
    android:background="@mipmap/batch_dial_bg"
    android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="30dip"
        android:textSize="22dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="自动外呼"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="58dip"
        android:layout_height="58dip"
        android:background="@mipmap/batch_dial_img0"
        />
    <TextView
        android:id="@+id/call_ing_comname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fffece00"
        android:textSize="11sp"
        android:text=""
        android:gravity="center"
        />
    <TextView
        android:id="@+id/call_ing"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:textSize="18dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text=""
        android:gravity="center"
        />
    <TextView
        android:id="@+id/call_ing_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text=""
        android:gravity="center"
        />
    <TextView
        android:id="@+id/call_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="准备中"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/call_biaozhu"
                android:layout_width="58dip"
                android:layout_height="58dip"
                android:background="@mipmap/batch_dial_img1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/call_chongbo"
                android:layout_width="58dip"
                android:layout_height="58dip"
                android:background="@mipmap/batch_dial_img2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/call_tianjia"
                android:layout_width="58dip"
                android:layout_height="58dip"
                android:background="@mipmap/batch_dial_img3"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="一键标注"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="立即重播"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="添加微信"
            />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/call_yanshi"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:textSize="16dip"
        android:textStyle="bold"
        android:text="下一个号码"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/call_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22dip"
        android:textStyle="bold"
        android:text=""
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/call_name"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:textSize="18dip"
        android:textStyle="bold"
        android:text=""
        />
    <TextView
        android:id="@+id/call_beizhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text=""
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/call_zanyin"
                android:layout_width="58dip"
                android:layout_height="58dip"
                android:background="@mipmap/batch_dial_img4"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/now_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/call_liji"
                android:layout_width="58dip"
                android:layout_height="58dip"
                android:background="@mipmap/batch_dial_img5"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="40dip"
        >
        <TextView
            android:id="@+id/call_jixu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="开始拨号"
            />
        <TextView
            android:id="@+id/call_lijiboda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="立即拨打"
            />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>